<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>form.html.twig
    </title>
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

</head>
<body>


    <div class="col-xs-offset-4 col-xs-4">
        {{ form_start(form) }}

        {{ form_label(form.titre, null, {'label_attr': {'class': 'form-control text-center text-uppercase'}}) }}
        {{ form_widget(form.titre, { 'attr': {'class': 'form-control text-center'} }) }}

        {{ form_label(form.resume, null, {'label_attr': {'class': 'form-control text-center text-uppercase'}}) }}        
        {{ form_widget(form.resume, { 'attr': {'class': 'form-control text-center'} }) }}

        {{ form_label(form.date, null, {'label_attr': {'class': 'form-control text-center text-uppercase'}}) }}        
        {{ form_widget(form.date, { 'attr': {'class': 'form-control text-center btn-block'} }) }}

        {{ form_label(form.auteur, null, {'label_attr': {'class': 'form-control text-center text-uppercase'}}) }}        
        {{ form_widget(form.auteur, { 'attr': {'class': 'form-control text-center'} }) }}

        {{ form_label(form.genOid, null, {'label_attr': {'class': 'form-control text-center text-uppercase'}}) }}        
        {{ form_widget(form.genOid, { 'attr': {'class': 'form-control text-center'} }) }}

        <div class="text-center">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-success btn-block'}}) }}
                {{ form_end(form) }}
        </div>
                
</div>

</body>
</html>