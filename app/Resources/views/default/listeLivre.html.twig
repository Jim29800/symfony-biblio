        {% endfor %}
    </select>

    <ul class="uk-list uk-list-bullet">
        
        {% for value in liste %}
        <li>{{ value.titre }} : {{ value.genre.type }}</li>
        {% endfor %}
    </ul>
    
    
    
    {% for value in liste %}
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Category</th>
                
            </tr>
        </thead>
        <tbody>
            <tr>
                <td scope="row"></td>
                <td>{{ value.titre }}</td>
                <td>{{ value.genre.type }}</td>
            </tr>
            <tr>
                <td scope="row"></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
    {% endfor %}






    {% endblock %}
